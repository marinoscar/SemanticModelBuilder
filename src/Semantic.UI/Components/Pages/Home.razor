@page "/"
@using Luval.SemanticModel
@using Microsoft.SemanticKernel
@using Microsoft.SemanticKernel.Connectors.OpenAI
@rendermode InteractiveServer

<PageTitle>Home</PageTitle>

<GenAIBotMateControl @ref="Control" 
            Service="@Agent" 
            PromptSettings="GetSettings()"
            ChatTitle="New Chat">

</GenAIBotMateControl>

@code {
    private GenAIBotMateControl Control { get; set; }

    [Inject]
    public required DatabaseAgent Agent { get; set; }

    private OpenAIPromptExecutionSettings GetSettings()
    {
        return new OpenAIPromptExecutionSettings()
            {
                Temperature = 0,
                FunctionChoiceBehavior = FunctionChoiceBehavior.Auto()
            };
    }
}